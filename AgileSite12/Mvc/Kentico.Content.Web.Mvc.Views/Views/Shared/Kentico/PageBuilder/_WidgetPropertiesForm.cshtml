@using Kentico.Web.Mvc
@using Kentico.Forms.Web.Mvc;
@using Kentico.Forms.Web.Mvc.Internal;


@model GeneratedFormViewModel

@Html.Kentico().FormComponentsAdminStyles()

@using (Html.BeginForm("Validate", "KenticoWidgetPropertiesForm", FormMethod.Post, new { @class = "ktc-form-horizontal" }))
{
    foreach (var property in Model.FormComponents)
    {
        @Html.Kentico().FormField(property, SystemRenderingConfigurations.EditorField)
    }
}
